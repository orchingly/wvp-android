<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tab_bottom_bg">

    <ImageView
        android:id="@+id/action_bar_back_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/action_bar_back"
        android:contentDescription="@string/action_bar_back_desc" />

    <TextView
        android:id="@+id/action_bar_content_title"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="title" />


    <ImageView
        android:id="@+id/cloud_record_filter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="24dp"
        android:contentDescription="@string/select_desc"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        tools:visibility="visible"
        android:visibility="gone"
        android:src="@drawable/cloud_record_filter_img" />

</RelativeLayout>